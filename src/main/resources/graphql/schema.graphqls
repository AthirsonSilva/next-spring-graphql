type Mutation {
	addCategory(category: CategoryInput!): Category
	addGame(game: gameInput!): game
}

type Query {
	findCategoryById(id: ID!): Category
	getCategories: [Category]
	findGameById(id: ID!): game
	getGames: [game]
}

input CategoryInput {
	name: String!
}

input gameInput {
	name: String!
	price: Float!
	categoryId: ID!
}

type Category {
	id: ID!
	name: String!
}

type game {
	id: ID!
	name: String!
	price: Float!
	category: Category!
}